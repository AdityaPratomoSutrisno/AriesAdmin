<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TambahIuranActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/_35sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight ="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_round_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/tvTitleKK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="Tambah Data KK"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_round_arrow_back_ios_new_24" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Nomor Iuran"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/etNomorIuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:fontFamily="@font/inter_regular"
                android:hint="Nomor Iuran"
                android:inputType="numberSigned"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/BaseText"
                android:textColorHint="@color/GrayBA"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Nomor Induk Kependudukan"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/etNIK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:fontFamily="@font/inter_regular"
                android:hint="Nomor Induk Kependudukan"
                android:inputType="numberSigned"
                android:maxLength="16"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/BaseText"
                android:textColorHint="@color/GrayBA"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Nama Lengkap"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/etNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:fontFamily="@font/inter_regular"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/BaseText"
                android:textColorHint="@color/GrayBA"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Tempat Lahir"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/etTempatLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:fontFamily="@font/inter_regular"
                android:hint="Tempat Lahir"
                android:inputType="text"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/BaseText"
                android:textColorHint="@color/GrayBA"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Tanggal Lahir"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:id="@+id/llTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivBack2"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:srcCompat="@drawable/tabler_calendar" />

                <TextView
                    android:id="@+id/tvTanggalLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_regular"
                    android:hint="00/00/0000"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/BaseText"
                    android:textColorHint="@color/GrayBA"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Jenis Kelamin"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <RadioGroup
                android:id="@+id/rgJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbPerempuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:text="Perempuan"
                    android:textSize="@dimen/_10ssp" />

                <RadioButton
                    android:id="@+id/rbLakilaki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:text="Laki-laki"
                    android:textSize="@dimen/_10ssp" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Nomor HP"
                android:textColor="@color/BaseText"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:id="@+id/llNomorHP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="+62"
                    android:textColor="@color/BaseText"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/etNomorHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_regular"
                    android:hint="85XXXXXXXX"
                    android:maxLength="12"
                    android:inputType="numberSigned"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="@color/BaseText"
                    android:textColorHint="@color/GrayBA"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/inter_semibold"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_gray_border"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:hint="Alamat"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/BaseText"
                android:textColorHint="@color/GrayBA"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:id="@+id/llSwitchStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <Switch
                    android:id="@+id/swStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Switch" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnResetKK"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_blue_border_button"
                    android:fontFamily="@font/inter_bold"
                    android:text="Batal"
                    android:textColor="@color/BaseTextBlue"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnTambahKK"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_blue_button"
                    android:fontFamily="@font/inter_bold"
                    android:text="Tambah"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>