<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="right"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            app:srcCompat="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/audiowide_regular"
            android:text="Aries Admin"
            android:textAlignment="center"
            android:textColor="@color/BaseTextBlue"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/inter_semibold"
        android:text="Lupa Password"
        android:textColor="@color/BaseText"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/rounded_trans_blue"
        android:fontFamily="@font/inter_semibold"
        android:padding="@dimen/_10sdp"
        android:text="Silahkan masukan Username atau Nomor Induk Kependudukan anda"
        android:textColor="@color/BaseTextBlue"
        android:textSize="@dimen/_10ssp" />

    <EditText
        android:id="@+id/etUsernameNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/rounded_gray_border"
        android:fontFamily="@font/inter_regular"
        android:hint="Username atau NIK"
        android:inputType="text"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/BaseText"
        android:textColorHint="@color/GrayBA"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/tvPasswordSalah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:fontFamily="@font/inter_regular"
        android:text="Password tidak sesuai"
        android:textColor="@color/RedB7"
        android:textSize="@dimen/_10ssp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/rounded_blue_button"
        android:fontFamily="@font/inter_bold"
        android:text="Konfirmasi"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>